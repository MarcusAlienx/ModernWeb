{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch Chrome Debug",
      "request": "launch",
      "type": "chrome",
      "url": "http://localhost:5000",
      "webRoot": "${workspaceFolder}/client/src",
      "sourceMaps": true,
      "trace": true
    },
    {
      "name": "Attach to Node Server",
      "type": "node",
      "request": "attach",
      "port": 9229,
      "restart": true,
      "localRoot": "${workspaceFolder}",
      "remoteRoot": "${workspaceFolder}"
    },
    {
      "name": "Debug Server",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/server/index.ts",
      "env": {
        "NODE_ENV": "development"
      },
      "runtimeArgs": [
        "--loader",
        "tsx/esm"
      ],
      "console": "integratedTerminal",
      "restart": true,
      "protocol": "inspector"
    }
  ]
}