# Database Configuration
DATABASE_URL="your_neon_database_url_here"

# Development Environment
NODE_ENV="development"

# Server Configuration
PORT=5000

# Vite Configuration (Frontend)
VITE_API_URL="http://localhost:5000"

# Optional: Analytics and Tracking
# VITE_GOOGLE_ANALYTICS_ID="your_ga_id_here"
# VITE_GOOGLE_TAG_MANAGER_ID="your_gtm_id_here"

# Optional: Email Service (for contact forms)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER="your_email@gmail.com"
# SMTP_PASS="your_app_password"

# Optional: Social Media Integration
# VITE_INSTAGRAM_ACCESS_TOKEN="your_instagram_token"
# VITE_FACEBOOK_PAGE_ID="your_facebook_page_id"

# Optional: Payment Integration (for future e-commerce)
# STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
# VITE_STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"

# Optional: Image Storage (Cloudinary, AWS S3, etc.)
# CLOUDINARY_CLOUD_NAME="your_cloudinary_cloud_name"
# CLOUDINARY_API_KEY="your_cloudinary_api_key"
# CLOUDINARY_API_SECRET="your_cloudinary_api_secret"

# Security
# JWT_SECRET="your_jwt_secret_key_here"
# SESSION_SECRET="your_session_secret_here"

# Production Settings (Netlify)
# These will be set in Netlify dashboard
# NETLIFY_SITE_ID="your_netlify_site_id"
# NETLIFY_AUTH_TOKEN="your_netlify_auth_token"